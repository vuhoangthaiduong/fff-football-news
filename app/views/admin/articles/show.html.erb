<section id="feature_category_section" class="feature_category_section single-page section_wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="single_content_layout">
          <div class="item feature_news_item">
            <div class="item_img">
            </div>
            <div class="item_wrapper">
              <div class="d-flex justify-content-between mb-3">
                <div class="news_item_title">
                  <%= link_to @article.title, admin_article_path(@article), class: "h2" %>
                </div>
                <div class="dropdown">
                  <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Action
                  </button>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <%= link_to "Edit", edit_admin_article_path(@article), class: "dropdown-item" %>
                    <%= link_to "Delete", admin_article_path(@article), class: "dropdown-item", method: :delete %>
                  </div>
                </div>

              </div>

              <div class="item_meta">By:
                <%= image_tag @article.user.profile_picture, class: "img-profile rounded-circle", style: "height: 20px; width: 20px"%>
                <a href="#"><%= @article.user.username %></a>, at <a href="#"><%= @article.created_at.to_date %></a> 
              </div>

              <div class="item_content">
                <%= @article.content %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
