<div class="container-fluid">
  <%= form_for @article, url: admin_article_path(@article) do |f| %>
    <%= render 'layouts/shared/error_messages', object: @article %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control', rows: 10 %>
    </div>
    <div class="col d-flex justify-content-end">
      <%= link_to "Cancel", admin_article_path(@article) ,class: "btn btn-secondary mr-2" %>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
