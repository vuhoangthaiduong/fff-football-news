<section id="feature_category_section" class="feature_category_section single-page section_wrapper">
  <div class="container">
    <div class="row mb-3">
      <div class="col-md-12">
        <div class="d-flex justify-content-between mb-3">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><%= link_to "Leagues", admin_leagues_path %></li>
              <li class="breadcrumb-item active" aria-current="page"><%= link_to @league.name, admin_league_path(@league) %></li>
            </ol>
          </nav>
          <div class="dropdown">
            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Action
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
              <%= link_to "Edit", edit_admin_league_path(@league), class: "dropdown-item" %>
              <%= link_to "Delete", admin_league_path(@league), class: "dropdown-item", method: :delete %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class = "row">
      <div class= "col-6">
        <div class = "h3">
          <%= @league.name %><hr/>
        </div>
      </div>
    </div>
    <div class = "row">
      <div class= "col-6">
        <div class="mx-auto mb-3 shadow" style="width: 250px;">
          <div class="rounded" style="height: 250px; background-color: rgb(233, 236, 239);">
            <%= image_tag @league.logo, class: "img-profile", style: "height: inherit; width: inherit" if @league.logo.attached? %>
          </div>
        </div>
        <div class= "bg-secondary text-white rounded p-3">
          <div class="d-flex justify-content-between mb-2">
            <b>Name:</b> <%= @league.name %>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <b>Website URL:</b> <%= @league.website_url %>          
          </div>
          <div class="d-flex justify-content-between mb-2">
            <b>Region:</b> <%= @league.region %>
          </div>
          <div class="d-flex justify-content-between">
            <b>Founded at:</b> <%= @league.founded_at %>          
          </div>  
        </div>
      </div>
      <div class = "col-6">
        <ul class="list-group">
          <div class = "list-group-item list-group-item-secondary font-weight-bold text-uppercase">Seasons</div>
          <%= render @league.seasons %>
        </ul>
        <%= link_to 'Add season', new_admin_league_season_path(league_id: @league.id), class: "list-group-item list-group-item-action bg-success text-white text-center mt-2", remote: true %>  
      </div>
    </div>
  </div>
</section>
