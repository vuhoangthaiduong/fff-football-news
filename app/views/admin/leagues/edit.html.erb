<div class="container-fluid">
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Edit League</h1>
  </div>
  <%= form_for([:admin, @league]) do |f| %>
    <%= render 'layouts/shared/error_messages', object: @league %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :website %>
      <%= f.text_field :website_url, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :region %>
      <%= f.text_field :region, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :founded_at %>
      <%= f.date_field :founded_at, as: :date, class: 'form-control' %> 
    </div>
    <div class="form-group">
      <%= f.label :logo %>
      <div class="mx-auto mb-3" style="width: 140px;">
        <div class="d-flex justify-content-center align-items-center rounded" style="height: 140px; background-color: rgb(233, 236, 239);">
          <%= image_tag @league.logo, class: "img-profile", style: "height: inherit; width: inherit" if @league.logo.attached? %>
        </div>
      </div>
      <%= f.file_field :logo, accept: "image/jpeg,image/gif,image/png" %>
    </div>
    <div class="col d-flex justify-content-end">
      <%= link_to "Cancel", admin_league_path(@league), class: "btn btn-secondary mr-2" %>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
